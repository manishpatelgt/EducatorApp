<resources>

    <style name="CustomExoMediaButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">@dimen/video_view_exo_player_play_pause_button_dimen
        </item>
        <item name="android:layout_height">@dimen/video_view_exo_player_play_pause_button_dimen
        </item>
    </style>

    <style name="CustomExoMediaButton.Play">
        <item name="android:src">@drawable/ic_play_circle_filled</item>
    </style>

    <style name="CustomExoMediaButton.Pause">
        <item name="android:src">@drawable/ic_pause_circle_filled</item>
    </style>

    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <!-- Bottom Menu style - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  - -->
    <style name="BottomMenuStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="itemTextAppearanceActive">@style/ActiveText</item>
        <item name="itemTextAppearanceInactive">@style/InactiveText</item>
    </style>


    <!-- * * * * * * * * * * * TOOLBAR * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * -->
    <!-- Toolbar style - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <style name="ToolbarStyle" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>

    <style name="ToolbarStyle.White" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ToolbarStyle.Blue" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <!-- Popup Menu style - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <style name="ToolbarPopupMenuStyle" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/calibri</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="DataEntrySubjectTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_text_entry_notes</item>
        <item name="android:textColor">@color/textcolor3</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/edittexthintcolor2</item>
        <item name="android:layout_margin">@dimen/dimen_20dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/dimen_250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/calibri</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">@dimen/dimen_18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/dimen_10dp</item>
        <item name="android:layout_margin">@dimen/dimen_10dp</item>
    </style>

    <style name="SensibleDefaultsMaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">@dimen/dimen_10dp</item>
    </style>

</resources>